import java.util.*;
public class add_array_element_using_method {
    public static int addarray(int num[],int n){
        int sum =0;
        for (int i = 0; i < n; i++)
            sum +=  num[i];
            return sum;
    }
    public static void main(String[] args) {
          int size;
        System.out.println("enter size");
        Scanner sc =new Scanner(System.in);
        size= sc.nextInt();
        int num[] = new int[100];
        System.out.println("enter the number");
        for (int i=0; i<size; i++)
        {
            num[i]= sc.nextInt();
        }
        System.out.println("addition is =" + addarray(num, size));
    } 
}
